.index
  .index__box
    .slider
      %ul.slider__box
        %li
          .slick_1
            = image_tag "/F-Market1.png", size: "640x390", class: "slick_img"
        %li
          .slick_2
            = image_tag "/F-Market2.png", size: "1040x390", class: "slick_img"
    .category
      %h2 人気のカテゴリー
      .category__type
        %ul
          %li メンズ
          %li レディース
          %li 家電・スマホ・カメラ
          %li おもちゃ・ボビーグッズ
    .list
      .list__title
        %h3 商品一覧
        = link_to 'もっと見る', "#"
      .items
        %ul
          - @items.each do|item|
            %li.item
              = link_to item_path(item) do
                %figure#figure1
                  //- item.images.each do |image|
                  =image_tag "#{item.images}", alt: "商品の写真", class:"picture"
                  %span#price="¥#{item.price}"
                  .pic
                  %figcaption.exp
                    %span=item.name
