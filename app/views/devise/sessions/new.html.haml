.session_wrapper
  .single_container.nomargin
    .single_header
      = link_to image_tag("/fmarket_logo_red.svg", size: "185x49"), root_path
    .session__main
      .session__main__container
        .session__main__container__regist
          %p アカウントをお持ちでない方はこちら
          = link_to new_user_registration_path, class: "btn_regist" do
            新規会員登録
        .session__main__container__box
          = link_to new_user_registration_path, class: "btn_default btn_facebook" do
            %i.fab.fa-facebook-square.icon_facebook>
            Facebookでログイン
          = link_to new_user_registration_path, class: "btn_default btn_google" do
            %i.fab.fa-google.icon_google>
            Googleでログイン
          = form_for(resource, as: resource_name, url: session_path(resource_name), class: "login__form") do |f|
            = f.email_field :email, placeholder: 'メールアドレスを入力', class: 'form_text'
            = f.password_field :password, placeholder: 'メールアドレスを入力', class: 'form_text'
            .session__main__container__btn
            = f.submit "ログイン", class: "btn_default btn_mail"
            = link_to "パスワードをお忘れの方はこちら","#",class: "forget_password"

