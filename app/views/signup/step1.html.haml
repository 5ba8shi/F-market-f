              %label{for: "nickname"}
                ニックネーム
                %span.form__require 必須
              %input.input__default{placeholder: "例）メルカリ太郎", type: "text"}/
            .session__main__container__formGroup
              %label{for: "email"}
                メールアドレス
                %span.form__require 必須
              %input.input__default{placeholder: "PC・スマホ可", type: "text"}/
            .session__main__container__formGroup
              %label{for: "password"}
                パスワード
                %span.form__require 必須
              %input.input__default{placeholder: "7文字以上の半角英数字", type: "text"}/
              %p.form__info__text ※  英字と数字の両方を含めて設定してください
              .checkbox__default
